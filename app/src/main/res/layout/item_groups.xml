<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/holidayLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dragHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_drag_horizontal"
        android:padding="@dimen/activity_horizontal_margin"/>
    
    <ImageView
        android:id="@+id/teamIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/dragHorizontal"
        android:layout_centerVertical="true"/>
    
    <TextView
        android:id="@+id/teamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/teamIcon"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/teamPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
</RelativeLayout>