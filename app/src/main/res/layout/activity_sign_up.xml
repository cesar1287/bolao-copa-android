<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_default"
    android:padding="16dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/pontogo_logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_width="150dp"
            android:layout_height="180dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/imageView">

            <EditText
                android:id="@+id/nameEdit"
                android:hint="@string/nome"
                android:inputType="text"
                android:drawableStart="@drawable/ic_account_outline_white_24dp"
                android:drawablePadding="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.EditDefault"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_input"/>

            <EditText
                android:id="@+id/emailEdit"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_email_outline"
                android:drawablePadding="16dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.EditDefault"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_input"/>

            <EditText
                android:id="@+id/passwordEdit"
                android:hint="@string/password"
                style="@style/Widget.EditDefault"
                android:drawableStart="@drawable/ic_lock_outline"
                android:drawablePadding="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="@dimen/default_input"/>

            <RelativeLayout
                android:id="@+id/relativeButton"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/signUpButton"
                    style="@style/Widget.ButtonRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:visibility="visible" />
                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:visibility="gone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:id="@+id/progressBar"
                    android:indeterminate="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/haveAccount"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView"
                    android:text="@string/ja_tem_conta"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:textColor="@android:color/white"
                    android:textAllCaps="true"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:background="?selectableItemBackground"
                    android:textSize="12sp"
                    android:id="@+id/signInButton"
                    android:textColor="@color/colorAccent"
                    android:layout_toEndOf="@+id/textView"
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_marginEnd="16dp"
                    android:text="@string/sign_in"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>