<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.EditDefault" parent="android:Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/default_input</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Widget.ButtonRed" parent="android:Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/default_button_selected</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>
</resources>
