<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionOverflowButtonStyle">@style/WhiteActionButtonOverflow</item>
    </style>

    <style name="WhiteActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/dots_vertical</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="Widget.EditDefault" parent="android:Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@color/white_50</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/default_input</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Widget.ButtonRed" parent="android:Widget">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/default_button_selected</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Widget.EditForm" parent="android:Widget">
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
</resources>
